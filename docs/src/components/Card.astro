---
import { icons } from 'lucide-react'
import { Icon } from './icon'

interface Props {
  iconName?: keyof typeof icons
  title: string
  iconStyles?: string
  href?: string
}

const { iconName, title, iconStyles, href } = Astro.props
---

{
  href ? (
    <a href={href}>
      <article class='card sl-flex'>
        <p class='title sl-flex'>
          {iconName && (
            <span class='icon'>
              <Icon name={iconName} className={iconStyles} />
            </span>
          )}
          <span set:html={title} />
        </p>
        <div class='body'>
          <slot />
        </div>
      </article>
    </a>
  ) : (
    <article class='card sl-flex'>
      <p class='title sl-flex'>
        {iconName && (
          <span class='icon'>
            <Icon name={iconName} className={iconStyles} />
          </span>
        )}
        <span set:html={title} />
      </p>
      <div class='body'>
        <slot />
      </div>
    </article>
  )
}

<style>
  .card {
    --sl-card-border: var(--sl-color-purple);
    --sl-card-bg: var(--sl-color-purple-low);
    border: 1px solid var(--sl-color-gray-5);
    background-color: var(--sl-color-black);
    padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
    flex-direction: column;
    gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
  }

  .card:nth-child(4n + 1) {
    --sl-card-border: var(--sl-color-orange);
    --sl-card-bg: var(--sl-color-orange-low);
  }
  .card:nth-child(4n + 3) {
    --sl-card-border: var(--sl-color-green);
    --sl-card-bg: var(--sl-color-green-low);
  }
  .card:nth-child(4n + 4) {
    --sl-card-border: var(--sl-color-red);
    --sl-card-bg: var(--sl-color-red-low);
  }
  .card:nth-child(4n + 5) {
    --sl-card-border: var(--sl-color-blue);
    --sl-card-bg: var(--sl-color-blue-low);
  }
  .title {
    font-weight: 600;
    font-size: var(--sl-text-h4);
    color: var(--sl-color-white);
    line-height: var(--sl-line-height-headings);
    gap: 1rem;
    @apply text-base;
  }

  .card .body {
    margin: 0;
    font-size: clamp(
      var(--sl-text-sm),
      calc(0.5rem + 1vw),
      var(--sl-text-body)
    );
  }

  .card .title svg {
    @apply size-6;
  }
  .card .body {
    @apply text-sm text-muted-foreground;
  }
</style>
