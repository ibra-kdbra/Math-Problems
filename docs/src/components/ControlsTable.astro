---
export interface Props {
  title?: string;
  controls: { key: string; description: string }[];
}
const { title, controls } = Astro.props;
---
<div class="controls-table">
  {title && <h3>{title}</h3>}
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Key</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {controls.map((ctrl) => (
          <tr>
            <td class="key-cell">{ctrl.key}</td>
            <td>{ctrl.description}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>

<style>
.controls-table {
  text-align: center;
}

.controls-table h3 {
  margin-bottom: 0.75rem;
  color: var(--sl-color-accent);
}

/* Wrapper ensures centering */
.table-wrapper {
  display: flex;
  justify-content: center;
}

/* Table: compact + adaptive theme colors */
table {
  border-collapse: collapse;
  font-size: 0.95rem;
  border: 1px solid var(--sl-color-border);
  border-radius: 0.5rem;
  overflow: hidden;
  margin-inline: auto;
  width: auto; /* compact width */
  min-width: 320px; /* prevents it from collapsing too much */
}

thead {
  background: var(--sl-color-muted-bg);
}

th, td {
  padding: 0.5rem 0.8rem;
  text-align: left;
}

.key-cell {
  font-family: monospace;
  font-weight: 600;
  color: var(--sl-color-primary);
  white-space: nowrap;
}

tbody tr:nth-child(even) {
  background: var(--sl-color-bg-alt);
}

tbody tr:hover {
  background: var(--sl-color-muted-bg);
}
</style>
