---
import CodeBlock from './CodeBlock.astro';
import type { BundledLanguage } from 'shiki';

interface Step {
  icon: string;
  title: string;
  description: string;
  code: string;
  lang: BundledLanguage;
}

const { steps } = Astro.props as { steps?: Step[] };

if (!steps || steps.length === 0) {
  console.error("Steps component requires a 'steps' prop with at least one step.");
}
---

<div class="steps-container mt-8">
  <p class="text-xl mb-4">Follow these steps to set up and run the project:</p>

  <div class="steps">
    {steps?.map((step, index) => (
      <div class={`step ${index % 2 !== 0 ? 'ml-8' : ''}`}>
        <div class="step-icon text-2xl">{step.icon || '‚ùì'}</div>
        <div class="step-content">
          <h3 class="text-xl font-semibold">{step.title}</h3>
          <p class="text-sm text-gray-600">{step.description}</p>

          {step.code && step.lang && (
            <CodeBlock code={step.code} lang={step.lang as BundledLanguage} />
          )}
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .steps-container {
    margin-top: 20px;
    padding-left: 0;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .step {
    position: relative;
    padding-left: 20px;
    margin-bottom: 24px;
  }

  .step.ml-8 {
    margin-left: 40px;
  }

  .step-icon {
    margin-right: 16px;
    font-size: 24px;
    display: flex;
    align-items: center;
  }

  .step-content {
    padding-left: 16px;
  }

  .step-content h3 {
    color: #333;
  }

  .step-content p {
    color: #666;
  }

  .step::before {
    content: '';
    position: absolute;
    top: 50%;
    left: -10px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: transparent;
  }

  pre {
    background: transparent !important;
  }

  html[data-theme='light'] pre {
    @apply bg-foreground !important;
  }

  code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 16px;
    color: #555;
  }

  pre:hover {
    background-color: rgba(128, 128, 128, 0.2);
  }
</style>

